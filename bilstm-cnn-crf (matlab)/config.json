{
    "datasets": {
        "names": ["french", "english", "italian", "portuguese"],
        "split": {
            "training": 0.7,
            "validate": 0.15,
            "testing": 0.15
        }
    },
    "layers": {
        "embedding": {
            "dimension": 300
        },
        "dropout": {
            "probability": 0.25
        },
        "bilstm": {
            "units": 300
        },
        "cnn": {
            "repeat": 2,
            "filters": 200,
            "size": 2
        }
    },
    "training": {
        "minibatchsize": 64,
        "maxepochs": 120,
        "queries": 10,
        "validationfrequency": 50,
        "validationpatience": 10,
        "initialpercentage": 0.1
    }
}